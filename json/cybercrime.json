{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "title": {"text": "Cybercrime targets and Money involved"},
    "data": {
        "url": "./Datasets/cybercrime.csv"
    },
    "mark": "bar",
    "transform": [
        {
            "calculate": "datum.lost/1000000",
            "as": "totalLost"
        },
        {
            "calculate": "datum.lost/1000000",
            "as": "lostMillion"
        }
    ],
    "encoding": {
        "tooltip": [
            {
                "field": "totalLost",
                "title": "Money lost (millions)",
                "format": ".1f"
            },
            {
                "field": "year",
                "title": "Year "
            }
        ],
        "x": {
            "field": "age",
            "type": "ordinal",
            "sort": ["Under 20", "20-29", "30-39", "40-49", "50-59", "Above 60"],
            "title": "Age group",
            "axis": {
                "labelAngle": 0
            }
        },
        "y":{
            "field": "lostMillion",
            "type": "quantitative",
            "title": "Money lost (millions)"
        },
        "color": {
            "field": "year",
            "title": "Year"
        }
    },
    "config": {
        "background": "transparent",
        "axis": {
            "grid": false
        }
    }
}