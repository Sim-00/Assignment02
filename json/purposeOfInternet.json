{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 300,
    "data":{
        "url": "./Datasets/purposeInternet.csv"
    },
    "encoding": {
        "theta":{
            "field": "Percentage",
            "type":"quantitative",
            "stack": true
        },
        "color":{
            "field": "Purpose",
            "type": "nominal"
        },
        "radius": {
            "field": "Percentage",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "Purpose",
                "type": "nominal",
                "title": "Purpose: "
            },
            {
                "field": "Percentage",
                "type": "quantitative",
                "title": "Percentage: "
            }
        ]
    },
    "layer": [
       {
           "mark": {
               "type": "arc"
           }
       },
       {
           "mark":{
               "type": "text",
               "radiusOffset": 10
           },
           "encoding": {
               "text":{
                   "field": "Percentage",
                   "type":"quantitative",
                   "format": ".1f"
               },
               "color": {
                   "value": "black"
               }
           }
       }
    ],
    "config": {
        "background":"transparent"
    }
}