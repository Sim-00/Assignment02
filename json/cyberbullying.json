{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 600,
    "title": {"text": "Percentage of parents that reported their child as cyberbully victim"},
    "projection": {"type":"mercator"},
    "data": {
        "url": "./json/global.topojson",
        "format": {"type": "topojson", "feature": "global"}
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "./Datasets/cyberbullying.csv"
                },
                "key": "Country",
                "fields": ["Percentage","rank","lat","long"]
            }
        }
    ],
    "layer":[
        {
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name", "as": "note"
            }],
            "mark": {"type": "geoshape", "color":"lightgray", "stroke":"white"},
            "encoding": {
                "tooltip":{
                    "field": "note",
                    "title": "note"
                }
            }
        },
        {
            "mark": {"type": "geoshape", "stroke":"black"},
            "encoding": {
                "color": {
                    "field": "Percentage",
                    "type": "quantitative"
                },
                "tooltip": [{
                    "field":"properties.name",
                    "title": "Country"
                },{   
                    "field": "Percentage",
                    "type": "quantitative",
                    "format": ".1f"
                }]
            }
        },
        {
            "transform": [
                {"filter": "datum.rank == 28"},
                {
                    "calculate": "datum.properties.name + ' is Rank #28 (Last)'", "as": "text_annotation"
                }
            ],
            
            "mark": {
                "type": "text",
                "dy": -10
            },
            "encoding": {
                "latitude": {
                    "field": "lat"
                },
                "longitude":{
                    "field": "long"
                },
                "text": {
                    "field": "text_annotation"
                }
            }
        },
        {
            "transform": [
                {"filter": "datum.rank == 28"}
            ],
            "mark": {
                "type": "circle",
                "color": "orangered",
                "size": 40
            },
            "encoding": {
                "latitude": {
                    "field": "lat"
                },
                "longitude":{
                    "field": "long"
                }
            }
        },
        {
            "transform": [
                {"filter": "datum.rank == 1"},
                {
                    "calculate": "datum.properties.name + ' is Rank #1'", "as": "text_annotation"
                }
            ],
            
            "mark": {
                "type": "text",
                "dy": 40,
                "color": "black",
                "width": 1
            },
            "encoding": {
                "latitude": {
                    "field": "lat"
                },
                "longitude":{
                    "field": "long"
                },
                "text": {
                    "field": "text_annotation"
                }
            }
        },
        {
            "transform": [
                {"filter": "datum.rank == 1"}
            ],
            "mark": {
                "type": "circle",
                "color": "orangered",
                "size": 40
            },
            "encoding": {
                "latitude": {
                    "field": "lat"
                },
                "longitude":{
                    "field": "long"
                }
            }
        }
    ],
    "config": {
        "background":"transparent"
    }
}